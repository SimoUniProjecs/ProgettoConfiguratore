<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="513.0" prefWidth="692.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.configuratoreautoonline.InserisciVeicoloController">
   <Button fx:id="homeButton" alignment="TOP_RIGHT" onAction="#handleHomeButtonAction" text="Home">
      <VBox.margin>
         <Insets bottom="10.0" right="10.0" top="10.0" />
      </VBox.margin>
   </Button>
   <TextField fx:id="marcaTxt" promptText="Inserisci Marca">
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </VBox.margin>
   </TextField>
   <TextField fx:id="modelloTxt" promptText="Inserisci Modello">
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </VBox.margin>
   </TextField>
   <TextArea fx:id="coloriTxt" prefHeight="80.0" promptText="Inserisci colori separati da una virgola">
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </VBox.margin>
   </TextArea>
   <TextArea fx:id="optionalsTxt" prefHeight="80.0" promptText="Inserisci optionals separati da una virgola">
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </VBox.margin>
   </TextArea>
   <TextArea fx:id="motorizzazioniTxt" prefHeight="80.0" promptText="Inserisci motorizzazioni separate da un ;                                                                                                                                                                  Ad esempio:  2.9 L, 432 CV, 234Nm , Benzina, 120000 EUR">
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </VBox.margin>
   </TextArea>
   <Button fx:id="selezionaImagginiBtn" mnemonicParsing="false" onAction="#handleImageSelection" text="Seleziona immagini">
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </VBox.margin>
   </Button>
   <HBox fx:id="imageContainer" prefHeight="100.0" prefWidth="664.0" spacing="10.0">
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </VBox.margin>
   </HBox>
   <Button fx:id="caricaConfigurazioneBtn" mnemonicParsing="false" onAction="#oncaricaConfigurazioneBtnClicked" prefHeight="26.0" text="CARICA CONFIGURAZIONE">
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </VBox.margin>
   </Button>
</VBox>
