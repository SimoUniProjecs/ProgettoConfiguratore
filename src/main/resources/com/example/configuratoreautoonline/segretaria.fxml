<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.configuratoreautoonline.SegretariaController">
    <children>
        <MenuBar VBox.vgrow="NEVER">
            <menus>
                <Menu mnemonicParsing="false" text="Azioni">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleValutaUsati" text="Valuta Usati" />
                        <MenuItem mnemonicParsing="false" onAction="#handleInserisciVeicolo" text="Inserisci Veicolo" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <AnchorPane prefHeight="382.0" prefWidth="641.0">
            <children>
                <MenuButton fx:id="sceltaMarca" layoutX="194.0" layoutY="33.0" mnemonicParsing="false" text="Marca">
                    <items>
                        <MenuItem fx:id="sceltaAudi" mnemonicParsing="false" onAction="#handleSceltaAudi" text="Audi" />
                        <MenuItem fx:id="sceltaAlfaRomeo" mnemonicParsing="false" onAction="#handleSceltaAlfaRomeo" text="Alfa Romeo" />
                        <MenuItem fx:id="sceltaBMW" mnemonicParsing="false" onAction="#handleSceltaBMW" text="BMW" />
                    </items>
                </MenuButton>
                <TextField fx:id="modello" layoutX="194.0" layoutY="92.0" prefHeight="26.0" prefWidth="254.0" promptText="Inserisci il modello" />
                <Label alignment="CENTER" layoutX="194.0" layoutY="151.0" prefHeight="17.0" prefWidth="254.0" text="OPTIONAL DELLA VETTURA:" />
                <TextArea fx:id="listaOptionals" layoutX="194.0" layoutY="182.0" prefHeight="142.0" prefWidth="254.0" promptText="Inserire gli optionals separati da una virgola AD ESEMPIO: cerchi maggiorati, vetri oscurati, interni in pelle" />
                <Label fx:id="textMarcaSeg" layoutX="310.0" layoutY="38.0" prefHeight="17.0" prefWidth="138.0" />
            <Button id="aggiungi" fx:id="aggiungi" layoutX="190.0" layoutY="352.0" mnemonicParsing="false" onAction="#aggiungiAlCatalogo" prefHeight="26.0" prefWidth="254.0" text="AGGIUNGI AL CATALOGO" />
            </children>
        </AnchorPane>
    </children>
</VBox>
