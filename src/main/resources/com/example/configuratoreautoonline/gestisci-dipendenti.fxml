<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.control.TextField?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.configuratoreautoonline.GestisciDipendentiController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <hgap>10</hgap>
    <vgap>10</vgap>

    <Label text="Email:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="emailFieldGD" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Permessi:" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
    <TextField fx:id="numberFieldGD" GridPane.rowIndex="9" GridPane.columnIndex="1"/>

    <Button fx:id="BtnAggiungi" onAction="#handleSubmit" text="AGGIUNGI" maxWidth="200.0"/>
</GridPane>
