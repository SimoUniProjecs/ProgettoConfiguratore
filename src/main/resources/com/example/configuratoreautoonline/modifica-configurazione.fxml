<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.configuratoreautoonline.ModificaOrdineController">
    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

    <!-- Order Details -->
    <Label text="ID Configurazione:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <Label fx:id="idLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Marca:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <Label fx:id="marcaLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Modello:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <Label fx:id="modelloLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Colore:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <Label fx:id="coloreLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Motorizzazione:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <Label fx:id="motorizzazioneLabel" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="Optionals:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <Label fx:id="optionalsLabel" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <Label text="Prezzo:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
    <Label fx:id="prezzoLabel" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    <Label text="Email Cliente:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
    <Label fx:id="emailLabel" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

    <Label text="Data Arrivo:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
    <Label fx:id="dataArrivoLabel" GridPane.rowIndex="8" GridPane.columnIndex="1"/>

    <Label text="Luogo Concessionario:" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
    <ComboBox fx:id="concessionarioComboBox" GridPane.rowIndex="9" GridPane.columnIndex="1"/>

    <Button text="Salva" onAction="#handleSave" GridPane.rowIndex="10" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
</GridPane>
