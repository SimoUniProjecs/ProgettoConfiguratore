<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Pos?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      prefHeight="787.0" prefWidth="600.0"
      fx:controller="com.example.configuratoreautoonline.VendiController">

    <!-- Barra di navigazione -->
    <HBox alignment="CENTER" style="-fx-background-color: #f0f0f0;">
        <Button onAction="#handleHomeButton" text="Home" />
    </HBox>

    <!-- Contenuto principale -->
    <VBox spacing="10" alignment="CENTER">
        <!-- Etichetta per il titolo -->
        <Label text="VENDITA AUTO USATE:" />

        <!-- ImageView per mostrare l'immagine selezionata -->
        <ImageView fx:id="imageView" fitHeight="250.0" fitWidth="350.0" preserveRatio="true" />

        <!-- Pulsante per aprire il file chooser -->
        <Button fx:id="selectBtn" onAction="#handleImageSelection" text="Seleziona Immagine" />

        <!-- Campi di testo per l'inserimento delle informazioni -->
        <TextField fx:id="marcaTxt" promptText="Inserisci Marca" maxWidth="160.0" />
        <TextField fx:id="modelloTxt" promptText="Inserisci Modello" maxWidth="160.0" />
        <DatePicker fx:id="imatricolazione" promptText="Data immatricolazione" maxWidth="160.0" />
        <TextField fx:id="kmTxt" promptText="Inserisci km" maxWidth="160.0" />
        <TextField fx:id="proprietariTxt" promptText="Numero proprietari" maxWidth="160.0" />

        <Label text="Stato del veicolo:" />
        <ChoiceBox fx:id="proprietariChoiceBox" prefWidth="160.0">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="1" />
                    <String fx:value="2" />
                    <String fx:value="3" />
                    <String fx:value="4" />
                    <String fx:value="5" />
                    <String fx:value="6" />
                    <String fx:value="7" />
                    <String fx:value="8" />
                    <String fx:value="9" />
                    <String fx:value="10" />
                </FXCollections>
            </items>
        </ChoiceBox>

        <Label text="Cambio:" />
        <!-- ChoiceBox per il tipo di trasmissione -->
        <ChoiceBox fx:id="trasmissioneChoiceBox" prefWidth="160.0">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Manuale" />
                    <String fx:value="Automatico" />
                </FXCollections>
            </items>
        </ChoiceBox>

        <Label text="Alimentazione:" />
        <!-- ChoiceBox per il tipo di carburante -->
        <ChoiceBox fx:id="carburanteChoiceBox" prefWidth="160.0">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Benzina" />
                    <String fx:value="Diesel" />
                    <String fx:value="Ibrida" />
                    <String fx:value="Elettrica" />
                    <String fx:value="Plug-in Hybrid" />
                </FXCollections>
            </items>
        </ChoiceBox>

    </VBox>
</VBox>