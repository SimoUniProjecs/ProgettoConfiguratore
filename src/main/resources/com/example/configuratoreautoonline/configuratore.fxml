   <VBox spacing="10" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="177.0" AnchorPane.topAnchor="50.0">
      <ComboBox fx:id="marcaComboBox" onAction="#onMarcaSelected" promptText="Seleziona Marca" VBox.vgrow="ALWAYS" />
      <ComboBox fx:id="modelloComboBox" onAction="#onModelloSelected" promptText="Seleziona Modello" VBox.vgrow="ALWAYS" />
      <ComboBox fx:id="coloreComboBox" onAction="#onColoreSelected" promptText="Seleziona Colore" VBox.vgrow="ALWAYS" />
      <ComboBox fx:id="ruoteComboBox" promptText="Seleziona Ruote" VBox.vgrow="ALWAYS" />
      <Button onAction="#onConfiguraButtonClicked" text="Configura" VBox.vgrow="ALWAYS" />
   </VBox>

   <Label fx:id="resultLabel" layoutX="10.0" layoutY="400.0" AnchorPane.leftAnchor="10.0" />
   <ImageView fx:id="carImageView" fitHeight="404.0" fitWidth="588.0" layoutX="163.0" layoutY="38.0" pickOnBounds="true" preserveRatio="true" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="50.0" />

</AnchorPane>