<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="546.0" prefWidth="913.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.configuratoreautoonline.CarConfiguratorController">

   <!-- Barra di navigazione -->
   <HBox alignment="CENTER" style="-fx-background-color: #f0f0f0;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <Button onAction="#handleHomeButton" text="Home" />
   </HBox>

   <Label fx:id="resultLabel" layoutX="10.0" layoutY="400.0" AnchorPane.leftAnchor="10.0" />
   <ImageView fx:id="carImageView" fitHeight="404.0" fitWidth="588.0" layoutX="163.0" layoutY="38.0" pickOnBounds="true" preserveRatio="true" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="50.0" />
   <ComboBox fx:id="modelloComboBox" layoutX="18.0" layoutY="50.0" onAction="#onModelloSelected" prefHeight="26.0" prefWidth="184.0" promptText="Seleziona Modello" />
   <ComboBox fx:id="coloreComboBox" layoutX="22.0" layoutY="102.0" prefHeight="26.0" prefWidth="184.0" promptText="Seleziona Colore" />
   <Button layoutX="29.0" layoutY="485.0" onAction="#onConfiguraButtonClicked" prefHeight="26.0" prefWidth="209.0" text="Configura" />
   <CheckBox fx:id="vetriCheck" layoutX="29.0" layoutY="290.0" mnemonicParsing="false" text="Vetri oscurati" />
   <CheckBox fx:id="pinzeCheck" layoutX="29.0" layoutY="334.0" mnemonicParsing="false" text="Pinze Freni colorate" />
   <CheckBox fx:id="internoCheck" layoutX="29.0" layoutY="377.0" mnemonicParsing="false" text="Interno in Pelle" />
   <CheckBox fx:id="impiantoAudioCheck" layoutX="29.0" layoutY="415.0" mnemonicParsing="false" text="Impianto Audio maggiorato" />
   <CheckBox fx:id="abbonamentoCheck" layoutX="29.0" layoutY="452.0" mnemonicParsing="false" text="Abbonamento annuale per ricarica" />
   <ComboBox fx:id="motorizzazioneComboBox" layoutX="22.0" layoutY="154.0" onAction="#onMotoSelected" promptText="Seleziona Motorizzazione" />
   <CheckBox fx:id="cerchiCheck" layoutX="29.0" layoutY="207.0" mnemonicParsing="false" text="Cerchi maggiorati" />
   <CheckBox fx:id="cerchiScuriCheck" layoutX="29.0" layoutY="252.0" mnemonicParsing="false" text="Cerchi scuri" />

</AnchorPane>
