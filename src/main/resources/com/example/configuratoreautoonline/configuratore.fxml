<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="444.0" prefWidth="765.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.configuratoreautoonline.CarConfiguratorController">
   <!-- Barra di navigazione -->
   <HBox alignment="CENTER" style="-fx-background-color: #f0f0f0;" AnchorPane.leftAnchor="0.0"
         AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <Button onAction="#handleHomeButton" text="Home"/>
   </HBox>

   <VBox spacing="10" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="50.0">
      <ComboBox fx:id="marcaComboBox" onAction="#onMarcaSelected" promptText="Seleziona Marca" VBox.vgrow="ALWAYS"/>
      <ComboBox fx:id="modelloComboBox" onAction="#onModelloSelected" promptText="Seleziona Modello"
                VBox.vgrow="ALWAYS"/>
      <ComboBox fx:id="coloreComboBox" onAction="#onColoreSelected" promptText="Seleziona Colore" VBox.vgrow="ALWAYS"/>
      <ComboBox fx:id="ruoteComboBox" promptText="Seleziona Ruote" VBox.vgrow="ALWAYS"/>
      <Button onAction="#onConfiguraButtonClicked" text="Configura" VBox.vgrow="ALWAYS"/>
   </VBox>

   <ImageView fx:id="carImageView" fitHeight="200" fitWidth="300" preserveRatio="true"/>
   <Label fx:id="resultLabel" layoutX="10.0" layoutY="400.0" />
</AnchorPane>
